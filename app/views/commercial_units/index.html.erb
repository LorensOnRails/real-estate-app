<p id="notice"><%= notice %></p>

<h1>Commercial Units</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Address</th>
      <th>Shops</th>
      <th>Sqmt</th>
      <th>Parking</th>
      <th>Price</th>
      <th>Picture</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @commercial_units.each do |commercial_unit| %>
      <tr>
        <td><%= commercial_unit.owner %></td>
        <td><%= commercial_unit.address %></td>
        <td><%= commercial_unit.shops %></td>
        <td><%= commercial_unit.sqmt %></td>
        <td><%= commercial_unit.parking %></td>
        <td><%= commercial_unit.price %></td>
        <td><%= image_tag(commercial_unit.picture, size: '100x100') if commercial_unit.picture.attached? %></td>
        <td><%= link_to 'Show', commercial_unit %></td>
        <td><%= link_to 'Edit', edit_commercial_unit_path(commercial_unit) %></td>
        <td><%= link_to 'Destroy', commercial_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Commercial Unit', new_commercial_unit_path %>
